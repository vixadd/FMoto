include $(TOPDIR)/Make.defs
include $(TOPDIR)/configs/ara/common/Make.defs

CFLAGS          += -I$(ARACOMMON_INCLUDE) -I$(ARACOMMON_SRC)

ASRCS           =
AOBJS           = $(ASRCS:.S=$(OBJEXT))

CSRCS           = ara_build_info.c
CSRCS          += greybus_timestamp.c
COBJS           = $(CSRCS:.c=$(OBJEXT))

SRCS            = $(ASRCS) $(CSRCS)
OBJS            = $(AOBJS) $(COBJS)


BUILD_VERSION   := $(shell git describe --dirty --always 2>/dev/null)
BUILD_NAME      := $(ARA_BUILD_NAME)
INFO_HEADER     := $(ARACOMMON_SRC)/ara_build_info_priv.h

ARCH_SRCDIR     = $(TOPDIR)/arch/$(CONFIG_ARCH)/src

CFLAGS          += -I$(ARCH_SRCDIR)/chip -I$(ARCH_SRCDIR)/common -I$(ARCH_SRCDIR)/armv7-m

.PHONY: all $(INFO_HEADER)

$(INFO_HEADER):
	@echo "// Autogenerated, do not modify!" > $@
	@echo "#ifndef _ARA_BUILD_INFO_PRIV_H_" >> $@
	@echo "#define _ARA_BUILD_INFO_PRIV_H_" >> $@
	@echo "#define ARA_FW_VERSION \"$(BUILD_VERSION)\"" >> $@
	@echo "#define ARA_BUILD_TARGET \"$(BUILD_NAME)\"" >> $@
	@echo "#define ARA_BUILD_INFO \"$(BUILD_INFO)\"" >> $@
	@echo "#endif" >> $@

all:  $(INFO_HEADER) ara-common$(LIBEXT)

$(AOBJS): %$(OBJEXT): %.S
	$(call ASSEMBLE, $<, $@)

$(COBJS) $(LINKOBJS): %$(OBJEXT): %.c
	$(call COMPILE, $<, $@)

ara-common$(LIBEXT): $(OBJS)
	$(call ARCHIVE, $@, $(OBJS))

depend: all

clean:
	$(call DELFILE, ara-common$(LIBEXT))
	$(call DELFILE, $(INFO_HEADER))
	$(call CLEAN)

distclean: clean
